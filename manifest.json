  "shortcuts": [
    {
      "name": "Новый документ",
      "short_name": "Новый",
      "description": "Создать новый Markdown документ",
      "url": "/?action=new",
      "icons": [
        {
          "src": "src/img/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Импорт файла",
      "short_name": "Импорт",
      "description": "Импортировать .md файл",
      "url": "/?action=import",
      "icons": [
        {
          "src": "src/img/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Аналитика",
      "short_name": "Статистика",
      "description": "Просмотр статистики использования",
      "url": "/?action=analytics",
      "icons": [
        {
          "src": "src/img/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/markdown": [".md", ".markdown"],
        "text/plain": [".txt"]
      }
    }
  ],
  
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+markdown",
      "url": "/?markdown=%s"
    }
  ]
}
